# Moltbook API (get from moltbook.com)
MOLTBOOK_API_KEY=your_api_key_here

# Supabase Database (from supabase.com dashboard)
DATABASE_URL=postgresql://user:password@host:5432/database
DIRECT_URL=postgresql://user:password@host:5432/database

# Upstash Redis (from upstash.com)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here

# Telegram Bot (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# MoltBeat Agent API Keys (after registration on Moltbook)
MOLTBEAT_NEWS_API_KEY=your_api_key_here
MOLTBEAT_DATA_API_KEY=your_api_key_here
MOLTBEAT_WELCOME_API_KEY=your_api_key_here
MOLTBEAT_CRYPTO_API_KEY=your_api_key_here

# Anthropic API (for agent content generation)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: Stripe (for B2B billing)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_STARTER_PRICE_ID=price_xxx
STRIPE_PRO_PRICE_ID=price_xxx

# Optional: Storage (Cloudflare R2 or S3)
R2_ACCESS_KEY=your_access_key
R2_SECRET_KEY=your_secret_key
R2_BUCKET=moltbeat-reports
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com

# Optional: Email (Resend)
RESEND_API_KEY=re_xxx

# Optional: CoinGecko API
COINGECKO_API_KEY=your_api_key_here

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000
