# ============ MOLTBOOK API ============
MOLTBOOK_API_KEY=your-moltbook-api-key-here

# ============ DATABASE (Supabase PostgreSQL) ============
DATABASE_URL=postgresql://user:password@host:port/database?schema=public
DIRECT_URL=postgresql://user:password@host:port/database

# ============ REDIS (Upstash) ============
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# ============ TELEGRAM BOT ============
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_IDS=123456789,987654321

# ============ COLLECTOR SCHEDULER ============
COLLECTOR_CRON=0 */5 * * *
COLLECTOR_MAX_AGENTS=100
COLLECTOR_MAX_POSTS=50

# ============ NEXT.JS (Pulse Dashboard) ============
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# ============ B2B / AUTHENTICATION ============
# Twitter/X OAuth (for user authentication)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# ============ PAYMENTS (Stripe) ============
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_ENTERPRISE=price_...

# ============ AI AGENTS ============
# Claude (for advanced analysis)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (for embeddings/search)
OPENAI_API_KEY=sk-...

# Gemini (alternative AI provider)
